<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="#ECFFE3"
    tools:context=".PalavrasActivity">

    <TextView
        android:id="@+id/titulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monofett_regular"
        android:text="Palavras"
        android:textColor="#4D8034"
        android:textSize="47sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monofett_regular"
        android:text="Aleatorias"
        android:textColor="#4D8034"
        android:textSize="47sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titulo1" />

    <EditText
        android:id="@+id/palavra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo2"
        android:layout_marginTop="71dp"
        android:hint="digite uma palavra"
        android:textColorHint="#606060"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/sorteada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/moul_regular"
        android:text="palavra aqui"
        android:textSize="30sp"
        android:textColor="#4D8034"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_below="@id/palavra"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/ok"
        android:layout_width="227dp"
        android:layout_height="80dp"
        android:layout_below="@id/sorteada"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/ok_retangulo" />

    <ImageView
        android:id="@+id/sortear"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_above="@id/voltar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sortear" />


    <ImageView
        android:id="@+id/voltar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-18dp"
        android:src="@drawable/voltar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>