<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="#ECFFE3"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monofett_regular"
        android:text="Jogos"
        android:textColor="#4D8034"
        android:textSize="47sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/nome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monofett_regular"
        android:text="Passatempo"
        android:textColor="#4D8034"
        android:textSize="47sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nome" />

    <ImageView
        android:id="@+id/codificador"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_below="@id/nome2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/codificador" />

    <ImageView
        android:id="@+id/termo"
        android:layout_width="391dp"
        android:layout_height="96dp"
        android:layout_below="@id/codificador"
        android:layout_marginTop="13dp"
        android:src="@drawable/termo" />

    <ImageView
        android:id="@+id/ppt"
        android:layout_width="350dp"
        android:layout_height="106dp"
        android:layout_below="@id/termo"
        android:layout_marginTop="36dp"
        android:paddingLeft="30dp"
        android:src="@drawable/ppt" />

    <ImageView
        android:id="@+id/palavraAleatoria"
        android:layout_width="320dp"
        android:layout_height="116dp"
        android:layout_below="@id/ppt"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:src="@drawable/palavras_aleatorias" />

</RelativeLayout>