<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="#ECFFE3"
    tools:context=".SucessoActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monofett_regular"
        android:text="Termo"
        android:textColor="#4D8034"
        android:textSize="47sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D8034"
        android:fontFamily="@font/moul_regular"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titulo"
        android:layout_marginTop="100dp"
        android:text="Parabens!" />


    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="#606060"
        android:fontFamily="@font/noticia_text_regular"
        android:layout_marginTop="60dp"
        android:layout_below="@id/label"
        android:text="nÃºmero de tentativas:"
        />


    <TextView
        android:id="@+id/tentativas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="#4D8034"
        android:fontFamily="@font/moul_regular"
        android:layout_marginTop="14dp"
        android:layout_below="@id/label2"
        android:text="tentativas aqui" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="#606060"
        android:fontFamily="@font/noticia_text_regular"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tentativas"
        android:text="tempo:"
        />

    <TextView
        android:id="@+id/tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:fontFamily="@font/moul_regular"
        android:textColor="#4D8034"
        android:layout_marginTop="14dp"
        android:layout_below="@id/label3"
        android:text="tempo aqui" />

    <ImageView
        android:id="@+id/voltar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-18dp"
        android:src="@drawable/voltar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>